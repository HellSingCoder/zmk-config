config BOARD_ENABLE_DCDC
	bool "Enable DCDC mode"
	select SOC_DCDC_NRF52X
	default y
	depends on BOARD_MANGO

if ZMK_DISPLAY

menuconfig MANGO_LUNA
    bool "Show WPM mango luna"
    select ZMK_WPM
    select LVGL_USE_IMG
    select LVGL_USE_ANIMATION

if MANGO_LUNA

config MANGO_LUNA_IDLE_LIMIT
    int "Upper limit for WPM for showing idle animation"
    default 30

config MANGO_LUNA_SLOW_LIMIT
    int "Upper limit for WPM for showing slow typing image"
    default 60

endif # MANGO_LUNA


endif